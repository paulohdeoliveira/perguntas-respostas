<%- include ('partials/header.ejs') %>

    <body>
        <%- include('partials/navbar.ejs') %>
            <div class="container">
                <hr>
                <h1>
                    <%= pergunta.titulo %>
                </h1>
                <p>
                    <%= pergunta.descricao %>
                </p>
                <hr>
                <form method="post" action="/responder">
                    <h3>Resposta</h3>
                    <label>Resposta:</label>
                    <textarea class="form-control" placeholder="Digite sua resposta" name="corpo"></textarea>
                    <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
                    <button type="submit" class="btn btn-primary mt-2">Responder</button>
                </form>
                <hr>
                <h3>Respostas:</h3>
                <hr>
                <% respostas.forEach(resposta=>{%>
                    <div class="card mt-4">
                        <div class="card-body">
                            <p>
                                <%= resposta.corpo %>
                            </p>
                        </div>
                    </div>
                    <% }) %>
            </div>
    </body>
    <%- include('partials/footer.ejs') %>